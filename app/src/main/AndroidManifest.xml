<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.illinois.finalproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/exhaust"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"/>

        <activity
            android:name=".PlayerGuides.PlayerGuides"
            android:label="@string/title_activity_player_guides"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".PlayerProfile.PlayerProfile"
            android:label="@string/title_activity_player_profiles"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ChampionStatistics.ChampionStatistics"
            android:label="@string/title_activity_champion_statistics"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".PlayerGuides.CreateGuide"
            android:label="@string/title_activity_create_guide"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".PlayerGuides.ChampionSelect"
            android:label="@string/title_activity_search_items"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"

                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>